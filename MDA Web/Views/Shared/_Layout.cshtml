<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/favicon.ico")">
    @*<title>@ViewBag.Title - Mi aplicación ASP.NET</title>*@
    <title>Monedero del ahorro</title>
    @Styles.Render("~/Content/css")
</head>

<body>
    <div id="contenedor">
        <header>
            <div id="header_section1">
                <div id="logo"><a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/Images/logo_fahorro.jpg")" width="341" height="139" alt="logo" /></a></div>
                <div id="barra_header">
                    <div id="barra_header_col1"></div>
                    <span height="33" align="right" style="color:#2A317D">
                        @if (Session["UserName"] != null)
                        {
                        <div margin-right: 10px;> <text>@Session["UserName"].ToString()</text></div>
                        }
                    </span>
                    <div id="barra_header_col4">
                        @if (Session["UserName"] != null)
                        {
                            <a href="@Url.Action("transacciones_consulta", "Home")"> <img src="@Url.Content("~/Content/Images/header_03.jpg")" width="17" height="30" alt="Farmacias del ahorro" /></a>                        }
                        else
                        {
                        <a href="@Url.Action("inicio", "Home")"><img src="@Url.Content("~/Content/Images/header_03.jpg")" width="17" height="30" alt="Farmacias del ahorro" /></a>}
                    </div>
                    <div id="barra_header_col4"><a href="https://www.fahorro.com" target="_blank"><img src="@Url.Content("~/Content/Images/header_05.jpg")" width="18" height="30" alt="Farmacias del ahorro" /></a></div>
                    <div id="barra_header_col4"><a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/Images/header_05b.jpg")" width="18" height="30" alt="Farmacias del ahorro" /></a></div>

                </div>
                <section class="menu_b">
                    <nav>
                        <label for="show-menu" class="show-menu">Menú</label>
                        <input type="checkbox" id="show-menu" role="button">
                        <ul id="menu">
                            <li class="beneficios"><a href="@Url.Action("beneficios", "Home")">Beneficios del Monedero del Ahorro</a></li>
                            <li><a href="@Url.Action("alianzas", "Home")">Alianzas</a></li>
                            <li><a href="@Url.Action("contacto", "Home")">Contacto</a></li>
                            <li class="beneficios_2"><a href="@Url.Action("faq", "Home")">Preguntas Frecuentes</a></li>
                        </ul>
                    </nav>
                </section>
            </div>
        </header>


        <div class="">
            @RenderBody()
            <hr />
            <footer>
                <div id="foot_col1">
                    <div id="foot_col2"><img src="~/Content/Images/logo_fahorro_footer.jpg" width="220" height="66" alt="" /></div>
                    <div id="foot_col3">
                        <span class="foot_titulos">Ayuda y servicios</span><br>
                        <a href="https://www.fahorro.com/quienessomos" target="_blank" class="btn_foot">Sobre nosotros</a><br>
                        <a href="https://www.fahorro.com/ahorropagos" target="_blank" class="btn_foot">Nuestros servicios</a><br>
                        <a href="https://www.fahorro.com/medios-de-contacto" target="_blank" class="btn_foot">Servicio a cliente</a><br>
                        <a href="https://www.fahorro.com/contacto-codigo-conducta-empleados-proveedores" target="_blank" class="btn_foot">Proveedores</a><br>
                    </div>
                    <div id="foot_col5"><img src="~/Content/Images/icono_candado.jpg" width="61" height="61" alt="" /></div>
                    <div id="foot_col6">
                        <span class="foot_titulos">Haz compras seguras</span><br>
                        <a href="https://www.fahorro.com/" target="_blank" class="btn_foot">Paga en línea o al recibir </a>
                    </div>
                    <div id="foot_col5"><img src="~/Content/Images/icono_ubicacion.jpg" width="61" height="54" alt="" /></div>
                    <div id="foot_col7">
                        <span class="foot_titulos">Ubicaciones</span><br>
                        <a href="https://www.fahorro.com/find-a-store.html" target="_blank" class="btn_foot">
                            Localiza tu farmacia<br>
                            más cercana
                        </a>
                    </div>
                    <div id="foot_col9">
                        <img src="~/Content/Images/img_siguenos.jpg" width="117" height="62" alt="" />
                        <a href="https://www.facebook.com/FAhorro" target="_blank"><img src="~/Content/Images/redes_sociales_01.jpg" alt="facebook" width="66" height="61" border="0" /></a>
                        <a href="https://www.instagram.com/fahorro/" target="_blank"><img src="~/Content/Images/redes_sociales_02.jpg" width="77" height="61" alt="Monedero del ahorro" /></a>
                        <a href="https://twitter.com/FAhorro" target="_blank"><img src="~/Content/Images/redes_sociales_03.jpg" width="77" height="61" alt="Monedero del ahorro" /></a>
                        <a href="https://www.youtube.com/user/fahorromx" target="_blank"><img src="~/Content/Images/redes_sociales_04.jpg" width="77" height="61" alt="Monedero del ahorro" /></a>
                        @{
                            var tikTokUrl = "https://www.tiktok.com/@fahorro";
                        }
                        <a href="@tikTokUrl" target="_blank"><img src="~/Content/Images/redes_sociales_05.jpg" width="77" height="61" alt="Monedero del ahorro" /></a>
                        <a href="https://www.pinterest.com.mx/fahorromx/" target="_blank"><img src="~/Content/Images/redes_sociales_06.jpg" width="77" height="61" alt="Monedero del ahorro" /></a>
                    </div>
                </div>
                <div id="foot_col8">
                    <span class="foot_text_red">Línea del Ahorro</span> <span class="foot_text_biggray">800 711 22 22</span><br>
                    <br><br><br>
                    <span class="foot_text_gray">
                        TODOS LOS DERECHOS RESERVADOS POR COMERCIALIZADORA FARMACÉUTICA DE CHIAPAS S.A.P.I. DE C.V., MÉXICO D.F. @DateTime.Now.Year<br>
                        COFEPRIS: 143300201 B1447 | NO. DE LICENCIA SANITARIA: 09 011 09 0096
                    </span><br>
                    <br>
                    <a href="https://www.fahorro.com/aviso-de-privacidad" target="_blank" class="btn_foot2">Aviso de privacidad</a> <span class="foot_text_gray">|</span> <a href="https://www.fahorro.com/terminos-y-condiciones-mda" target="_blank" class="btn_foot2">Términos y Condiciones</a><br>
                </div>
            </footer>

        </div>

        @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap"*@)
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
